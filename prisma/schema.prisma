generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SchoolClass {
  id         Int                 @id @default(autoincrement())
  title      String
  students StudentsInSchoolClasses[]
}

model Student {
  id    Int                 @id @default(autoincrement())
  name  String
  schoolClasses StudentsInSchoolClasses[]
}

model StudentsInSchoolClasses {
  student       Student     @relation(fields: [studentId], references: [id])
  studentId     Int
  schoolClass   SchoolClass @relation(fields: [schoolClassId], references: [id])
  schoolClassId Int

  @@id([schoolClassId, studentId])
}